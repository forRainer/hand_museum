<!--pages/demo/demo.wxml-->
<page>
  <view class="page">
    <view class="page__hd">
      <!--<image style="width: 750rpx; height: 300rpx" src="{{top_img}}"></image>-->
      <swiper autoplay="true" interval="2000">
        <swiper-item>
          <image src='http://47.114.120.151/images/xuanchuanye.JPG' height="150" mode='widthFix' class='img' />
        </swiper-item>
        <swiper-item>
          <image src='http://47.114.120.151/images/xuanchuanye2.JPG' height="150" mode='widthFix' class='img' />
        </swiper-item>
      </swiper>
    </view>
    <view class="weui-panel weui-panel__hd">全部景区</view>
    <view class="page__hd">
      <a bindtap="jumpTo" class="weui-media-box weui-media-box_appmsg" wx:for="{{area_count}}" wx:for-index="index" wx:for-item="item" wx:key="*this" data-code="{{area_list[index].area_code}}">
        <view class="weui-media-box__hd">
          <image class="weui-media-box__thumb" src="{{area_list[index].img_url}}" alt></image>
        </view>
        <view class="weui-media-box__bd">
          <h4 class="weui-media-box__title">{{area_list[index].name}}</h4>
          <view class="weui-media-box__desc">{{area_list[index].brief_introduction}}</view>
        </view>
      </a>
    </view>
  </view>
</page>
