/* pages/goods/goods.wxss */
@import "../../common/common.wxss";
.swiper-tab{  
    width: 100%;
    height: 44rpx;
    box-shadow:0rpx -3rpx 5rpx rgba(128, 128, 128, 0.137);
    line-height: 48rpx;
    display: flex;
    align-items: center;text-align:center;justify-content: center;
    padding-bottom: 8rpx;
}  

.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 16%;  
    text-align:center;
}

.on{
    border-bottom: 5rpx solid #63b4ad;
    font-weight: 600;
    margin-left: 100rpx;
    margin-right: 100rpx;
}

.off{
    opacity: 0.6;
    margin-left: 100rpx;
    margin-right: 100rpx;
}

.img{
    width: 100%;
}

.size_bar{
    position: fixed;
    width: 100%;
    height: 667rpx;
    bottom: -667rpx;
    background-color: #ffffff;
    opacity: 1;
    z-index: 5;
    scale: 1;
}

.size_detail{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0rpx 20rpx;
    background-color: #ededed;
    margin-left: 15rpx;
    font-size: 30rpx;
    border-radius: 5rpx;
}

.bak_color{
    background-color: #f3f4f6;
}
  
.radius_left{
    border-bottom-left-radius: 6rpx;
    border-top-left-radius: 6rpx;
}
  
.radius_right{
    border-bottom-right-radius: 6rpx;
    border-top-right-radius: 6rpx;
}

.size_buy_button{
    width: 50%; font-size: 33rpx; height: 80rpx;margin: auto 40rpx;
    border-radius: 10rpx;
    color: white;
}

.add_view{
    text-align:center; width: 50%;align-items: center;justify-content: center; display:flex;
    background-color: #333333;
    color: white;
    height: 80%;
    border-bottom-left-radius: 50rpx;
    border-top-left-radius: 50rpx;
    font-size: small;
}

.buy_view{
    text-align:center; width: 50%;align-items: center;justify-content: center; display:flex;
    background-color: #8a222d;
    color: white;
    height: 80%;
    border-bottom-right-radius: 50rpx;
    border-top-right-radius: 50rpx;
    font-size: small;
}